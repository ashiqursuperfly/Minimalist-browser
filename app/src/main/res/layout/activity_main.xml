<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/colorAccent"
    tools:context="s.ashiqur.mybrowser.MainActivity">

    <WebView
        android:id="@+id/myWebView"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="50dp" >

    </WebView>

    <EditText
        android:id="@+id/editTextEnterUrl"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="textAutoComplete|textEmailAddress|textPersonName|textWebEditText|textWebEmailAddress|textWebPassword"
        android:text="Enter Url Here"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="casual"
        android:text="Go"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonRefresh"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/buttonGo"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="casual"
        android:text="Refresh"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="10sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Small"
        android:layout_width="8mm"
        android:layout_height="7.7mm"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/buttonRefresh"
        android:max="@android:integer/config_longAnimTime"
        android:progressDrawable="@android:color/holo_green_light"
        android:progressTint="@android:color/holo_blue_bright" />


</RelativeLayout>

